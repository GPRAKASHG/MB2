pipeline {
    agent any

    stages {
        stage('Git Tagging') {
            steps {
                script {
                    def tagName = "v1.3" // Set your desired tag name here

                    sh "git tag ${v1.3}" // Creates the Git tag
                    sh "git push origin ${v1.3}" // Pushes the tag to the remote repository
                }
            }
        }
        // Other stages in your pipeline...
    }
}
